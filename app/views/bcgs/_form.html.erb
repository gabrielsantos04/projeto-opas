<%= form_for(bcg) do |f| %>
  <% if bcg.errors.any? %>
    <div id="error_explanation" class="card-panel red white-text">
      <h5>Resolva os problemas a seguir antes de Salvar:</h5>

      <ul>
      <% bcg.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="card-panel">
  
  <div class="input-field">

    <%= f.label :primeira_dose %>
    <%= f.date_select :primeira_dose %>
    
  </div>

  <div class="input-field">

    <%= f.label :segunda_dose %>
    <%= f.date_select :segunda_dose %>
    
  </div>

  <div class="input-field">

    <%= f.label :cicatriz %>
    <%= f.check_box :cicatriz %>
    
  </div>

  <div class="input-field">
    <%= f.collection_select :notificacao_contato_id, NotificacaoContato.all, :id, :name, prompt: true  %>
    
  </div>

</div>
  <div class="actions">
    <%= f.submit "Salvar", class:"btn" %>
  </div>
<% end %>
