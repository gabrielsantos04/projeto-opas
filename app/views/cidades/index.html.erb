<div class="card">
  <h1 class="center-align">Cidades</h1>
</div>
<div class="card">
  <div class="card-content">
    <span class="card-title grey-text text-darken-4" onclick="toogle_div('#pesquisa')">
      Pesquisa
    </span>
    <div id="pesquisa" class="not-show">
      <%= search_form_for @q, url: request.env['PATH_INFO'] do |f|  %>
      <%= f.text_field :nome_cont, placeholder: "Pesquisar..." %>
      <%= f.submit "Filtrar", class:"btn" %>
      <% end %>
    </div>
  </div>
</div>

<table class="card striped responsive-table">
  <thead>
    <tr>
            <th>Nome</th>
            <th>Uf</th>
            <th>Latitude</th>
            <th>Longitude</th>
          </tr>
  </thead>

  <tbody>
    <% @cidades.each do |cidade| %>
    <tr>
              
          <td><%= link_to cidade.nome,cidade %></td>
        
              

          <td><%= cidade.uf %></td>
        
              

          <td><%= cidade.latitude %></td>
        
              

          <td><%= cidade.longitude %></td>
        
          </tr>
    <% end %>
  </tbody>
</table>

<div class="card-panel">
  <%= paginate(@cidades)  %>
</div>

<%= link_to '+ Cadastrar', new_cidade_path, class:"btn" %>
