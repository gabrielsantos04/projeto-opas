<div class="card">
  <div class="card-content">
    <span class="card-title grey-text text-darken-4" onclick="toogle_div('#pesquisa')">
      Pesquisa
    </span>
    <div id="pesquisa" class="not-show">
      <%= search_form_for @q, url: request.env['PATH_INFO'] do |f|  %>
          <%= f.text_field :nome_or_descricao_or_dst_produto_nome_cont, placeholder: "Pesquisar..." %>
          <%= f.submit "Filtrar", class:"btn" %>
      <% end %>
    </div>
  </div>
</div>

<table class="card striped responsive-table">
  <thead>
  <tr>
    <th>Produto</th>
    <th>Nome</th>
    <th>Descricao</th>
    <th>Validade</th>
  </tr>
  </thead>

  <tbody>
  <% @dst_lotes.each do |dst_lote| %>
      <tr>

        <td><%= link_to dst_lote.dst_produto, dst_lote %></td>



        <td><%= dst_lote.nome %></td>



        <td><%= dst_lote.descricao %></td>



        <td><%= dst_lote.validade %></td>

      </tr>
  <% end %>
  </tbody>
</table>

<div class="card-panel">
  <%= paginate(@dst_lotes)  %>
</div>

<%= link_to '+ Cadastrar', new_dst_lote_path, class:"btn" %>
