<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="card-panel red white-text">
      <h5>Resolva os problemas a seguir antes de Salvar:</h5>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="card-panel">
  
  <div class="input-field">

    <%= f.label :nome %>
    <%= f.text_field :nome %>
    
  </div>

  <div class="input-field">

    <%= f.label :cpf %>
    <%= f.text_field :cpf %>
    
  </div>

  <div class="input-field">

    <%= f.label :email %>
    <%= f.text_field :email %>
    
  </div>

  <div class="input-field">
    <%= f.collection_select :cidade_id, Cidade.all, :id, :nome, prompt: true  %>
    
  </div>

  <div class="input-field">


    <%= f.select :role, User.role.options,{prompt:true} %>
    <%= f.label :role %>
  </div>

</div>
  <div class="actions">
    <%= f.submit "Salvar", class:"btn" %>
  </div>
<% end %>
