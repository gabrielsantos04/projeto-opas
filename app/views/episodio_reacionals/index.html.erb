<div class="card">  
  <div class="card-content">
    <span class="card-title grey-text text-darken-4" onclick="toogle_div('#pesquisa')">
      Pesquisa
    </span>
    <div id="pesquisa" class="not-show">
      <%= search_form_for @q, url: request.env['PATH_INFO'] do |f|  %>
      <%# f.text_field :name_cont, placeholder: "Pesquisar..." %>
      <%= f.submit "Filtrar", class:"btn" %>
      <% end %>
    </div>
  </div>
</div>

<table class="card striped responsive-table">
  <thead>
    <tr>
            <th>Notificacao</th>
            <th>Tipo</th>
            <th>Numero episodios</th>
            <th>Conduta mendicamentosa</th>
            <th>Data inicio</th>
            <th>Data termino</th>
          </tr>
  </thead>

  <tbody>
    <% @episodio_reacionals.each do |episodio_reacional| %>
    <tr>
              
          <td><%= link_to episodio_reacional.notificacao,episodio_reacional %></td>
        
              

          <td><%= episodio_reacional.tipo %></td>
        
              

          <td><%= episodio_reacional.numero_episodios %></td>
        
              

          <td><%= episodio_reacional.conduta_mendicamentosa %></td>
        
              

          <td><%= episodio_reacional.data_inicio %></td>
        
              

          <td><%= episodio_reacional.data_termino %></td>
        
          </tr>
    <% end %>
  </tbody>
</table>

<div class="card-panel">
  <%= paginate(@episodio_reacionals)  %>
</div>

<%= link_to '+ Cadastrar', new_episodio_reacional_path, class:"btn" %>
