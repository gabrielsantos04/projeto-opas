<div class="card">  
  <div class="card-content">
    <span class="card-title grey-text text-darken-4" onclick="toogle_div('#pesquisa')">
      Pesquisa
    </span>
    <div id="pesquisa" class="not-show">
      <%= search_form_for @q, url: request.env['PATH_INFO'] do |f|  %>
      <%# f.text_field :name_cont, placeholder: "Pesquisar..." %>
      <%= f.submit "Filtrar", class:"btn" %>
      <% end %>
    </div>
  </div>
</div>

<table class="card striped responsive-table">
  <thead>
    <tr>
            <th>Número</th>
            <th>Data</th>
            <th>Grau incapacidade</th>
            <th>Modo entrada</th>
            <th>Modo detecção</th>
            <th>Observações</th>
            <th>Baciloscopia</th>
            <th>Data início</th>
            <th>Esquema terapêutico</th>
          </tr>
  </thead>

  <tbody>
    <% @notificacaos.each do |notificacao| %>
    <tr>
              
          <td><%= link_to notificacao.numero,notificacao %></td>
        
              

          <td><%= notificacao.data %></td>
        
              

          <td><%= notificacao.grau_incapacidade_text %></td>
        
              

          <td><%= notificacao.modo_entrada_text %></td>
        
              

          <td><%= notificacao.modo_deteccao_text %></td>
        
              

          <td><%= notificacao.observacoes %></td>
        
              

          <td><%= notificacao.baciloscopia_text %></td>
        
              

          <td><%= notificacao.data_inicio %></td>
        
              

          <td><%= notificacao.esquema_terapeutico_text %></td>
        
          </tr>
    <% end %>
  </tbody>
</table>

<div class="card-panel">
  <%= paginate(@notificacaos)  %>
</div>

<%= link_to '+ Cadastrar', new_notificacao_path, class:"btn" %>
