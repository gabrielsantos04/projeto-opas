<div class="card">  
  <div class="card-content">
    <span class="card-title grey-text text-darken-4" onclick="toogle_div('#pesquisa')">
      Pesquisa
    </span>
    <div id="pesquisa" class="not-show">
      <%= search_form_for @q, url: request.env['PATH_INFO'] do |f|  %>
      <%# f.text_field :name_cont, placeholder: "Pesquisar..." %>
      <%= f.submit "Filtrar", class:"btn" %>
      <% end %>
    </div>
  </div>
</div>

<table class="card striped responsive-table">
  <thead>
    <tr>
            <th>Miligramas</th>
            <th>Medicamento</th>
            <th>Notificacao</th>
          </tr>
  </thead>

  <tbody>
    <% @esquema_substitutivos.each do |esquema_substitutivo| %>
    <tr>
              
          <td><%= link_to esquema_substitutivo.miligramas,esquema_substitutivo %></td>
        
              

          <td><%= esquema_substitutivo.medicamento %></td>
        
              

          <td><%= esquema_substitutivo.notificacao %></td>
        
          </tr>
    <% end %>
  </tbody>
</table>

<div class="card-panel">
  <%= paginate(@esquema_substitutivos)  %>
</div>

<%= link_to '+ Cadastrar', new_esquema_substitutivo_path, class:"btn" %>
