<h1 class="center-align">Escalas de Participação</h1>
<div class="card">
  <div class="card-content">
    <span class="card-title grey-text text-darken-4" onclick="toogle_div('#pesquisa')">
      Pesquisa
    </span>
    <div id="pesquisa" class="not-show">
      <%= search_form_for @q, url: request.env['PATH_INFO'] do |f|  %>
          <%= f.text_field :paciente_nome_cont, placeholder: "Nome do Paciente" %>
          <%= f.submit "Filtrar", class:"btn" %>
      <% end %>
    </div>
  </div>
</div>

<table class="card striped responsive-table">
  <thead>
  <tr>
    <th>Paciente</th>
    <th>Notificação</th>
    <th>Data entrevista</th>
    <th>Entrevistador</th>
    <th>Total</th>
    <th>Grau restrição</th>

  </tr>
  </thead>

  <tbody>
  <% @escala_parts.each do |escala_part| %>
      <tr>
        <td><%= escala_part.paciente %></td>
        <td><%= escala_part.notificacao %></td>
        <td><%= escala_part.data_entrevista %></td>
        <td><%= escala_part.entrevistador %></td>
        <td><%= escala_part.total %></td>
        <td><%= escala_part.grau_restricao %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<div class="card-panel">
  <%= paginate(@escala_parts)  %>
</div>

<%= link_to '+ Cadastrar', new_escala_part_path, class:"btn white-text", target:"_self" %>
