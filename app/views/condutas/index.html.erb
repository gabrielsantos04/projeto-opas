<div class="card">
  <h1 class="center-align">Condutas</h1>
</div>
<div class="card">
  <div class="card-content">
    <span class="card-title grey-text text-darken-4" onclick="toogle_div('#pesquisa')">
      Pesquisa
    </span>
    <div id="pesquisa" class="not-show">
      <%= search_form_for @q, url: request.env['PATH_INFO'] do |f|  %>
      <%= f.text_field :nome_cont, placeholder: "Pesquisar..." %>
      <%= f.submit "Filtrar", class:"btn" %>
      <% end %>
    </div>
  </div>
</div>

<table class="card striped responsive-table">
  <thead>
    <tr>
            <th>Nome</th>
          </tr>
  </thead>

  <tbody>
    <% @conduta.each do |conduta| %>
    <tr>
              
          <td><%= link_to conduta.nome,conduta_path(conduta) %></td>
      <td><%= link_to 'Excluir', conduta_path(conduta), method: :delete, data: { confirm: 'Deseja realmente excluir?' } %></td>
          </tr>
    <% end %>
  </tbody>
</table>

<div class="card-panel">
  <%= paginate(@conduta)  %>
</div>

<%= link_to '+ Cadastrar', new_conduta_path, class:"btn" %>
